generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Conversation {
  id        String    @id @default(uuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  messages  Message[]
}

model Message {
  id             String       @id @default(uuid())
  content        String
  isUserMessage  Boolean      @default(true)
  createdAt      DateTime     @default(now())
  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
}

// Mod√®les pour la partie 2 du test technique

model Option {
  id               String   @id @default(uuid())
  name             String   @unique
  description      String
  ask_for_item     Boolean  @default(false)
  ask_for_location Boolean  @default(false)
}

model Location {
  id   String @id @default(uuid())
  name String @unique
  type String
}

model Item {
  id       String @id @default(uuid())
  name     String @unique
  category String
}
